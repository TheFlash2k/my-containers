#!/bin/bash

function usage() {
	echo "Usage: $0 <version>"
	echo "Available versions:"
	for i in "${AVAILABLE[@]}"; do
		echo -en "\t $i"
		[ "$i" == "$DEFAULT" ] && echo -n "   <-- Default"
		echo
	done
	echo; exit 1
}

IMAGE="theflash2k/pwn-dev"
DEFAULT="latest"
AVAILABLE=( "latest" "2204" "2004" "1804" "1604")

TAG=""
if [[ $# -ne 1 ]]; then
	TAG="$DEFAULT"
else
	if [[ "$1" == "-h" || "$1" == "--help" ]]; then
		usage
	else
		for i in "${AVAILABLE[@]}"; do
			if [[ "$1" == "$i" || "$i" == "$1""04" ]]; then
				TAG="$i"
				break
			fi
		done
	fi
fi
[ -z "$TAG" ] && TAG="$DEFAULT"

echo "[*] Running $IMAGE version: $TAG"

docker run \
	-it \
	--rm \
	--name "pwn-dev-$TAG" \
	--hostname "pwn-dev-$TAG" \
	-v `pwd`:/chal \
	--privileged \
	"$IMAGE:$TAG"
